%span Search:
%form{:action => '/search', :method => 'get'}
  %select{:name => 'server', :value => params[:server]}
    - ["All Servers", "Darktide", "Frostfell", "Harvestgain", "Leafcull", "Morningthaw", "Thistledown", "Solclaim", "WintersEbb"].each do |s|
      - if params[:server] && params[:server] == s
        %option{:value => s, :selected => true}= s
      - else
        %option{:value => s}= s
    
  %input{:name => 'name', :type => 'text', :value => params[:name]}
  %input{:type => 'submit'}