%h2.title Player Counts

:css
  svg {
    background-color: black;
    border: 2px solid #AF7A30;
  }

  path {
    fill: none;
  }

  text {
    fill: white;
    font-weight: normal;
    font-size: 10px;
  }

  .x.axis line {
    stroke: white;
  }

  .axis label {
    fill: #CCC;
  }

  .x.axis .minor {
    stroke-opacity: 1;
  }

  .x.axis path {
    fill: none;
    stroke: white;
  }

  .y.axis line, .y.axis path {
    fill: none;
    stroke: white;
  }

  .label text {
    font-weight: normal;
    font-size: 10px;
  }

  .label rect {
    stroke: white;
  }

%script{:src => javascript_path('d3.min')}
%script{:src => javascript_path('popchart')}

:javascript
  d3.json("/player_counts.json", function(error, data) {
    popchart("#content", data);
  });
