  %thead
    %tr.line
      %td.tab{:colspan => 2} Augmentations
    %tr.colnames
      %td Name
      %td Uses
  %tbody
    - @character.properties.each do |k,v|
    - next unless PropertiesHelper::is_type(k, :aug)
