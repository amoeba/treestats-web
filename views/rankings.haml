%h2.title Rankings

%p
  %b Server:
  = params[:server]
%p
  %b Ranking:
  - if @tokens.length > 1
    = @tokens[1].split("_").map(&:capitalize).join(" ")
  - else
    = @tokens[0].split("_").map(&:capitalize).join(" ")
      
- if !@characters.exists?
  %span Couldn't find any characters for this ranking.
- else
  %table.listing
    %thead
      %tr
        %th Name
        %th Server
        %th= (@tokens.length == 1 ? @tokens : @tokens[1].split("_")).map(&:capitalize).join(" ")
    %tbody
      - @records.each do |character|
        %tr
          %td
            %a{:href => "/#{character[:server]}/#{character[:name]}"}= character[:name]
          %td= character[:server]
          %td= character[:value]
          
